@model CityWeather;

<div class="box cursor-pointer w-30 CssByDegree(Model.TemperatureFehrenheit)">
<div class="flex-borderless">
    <div class="w-50">
        <h2>@Model.CityName</h2>
        <h4 class="text-dark-grey">@Model.DateAndTime?.ToString("hh:mm tt")</h4>
        <a href="~/city-details/@Model.CityName" class="margin-top">Details</a>
    </div>
    <div class="w-50 border-left">
        <h2>
            @Model.TemperatureFehrenheit
            <span class="text-grey">@Model.CityUniqueCode</span>
        </h2>
    </div>
</div>
</div>
