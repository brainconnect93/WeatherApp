@model CityWeather

<!DOCTYPE html>
<html>
<head>
    <title>@Model.CityName city Weather</title>
    <meta charset="utf-8" />
    <link href="~/Styles.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="page-content">
            <div class="margin-bottom">
                <h1>Weather</h1>
            </div>

            @if(Model != null)
            {
                <div class="box cursor-pointer w-30 margin-auto margin-top-200">
                    <div class="flex-borderless">
                        <div class="w-50">
                            <h2>@Model.CityName</h2>
                            <h4>@Model.DateAndTime?.ToString("dd MM yyy")</h4>
                            <h4>@Model.DateAndTime?.ToString("hh:mm tt")</h4>
                        </div>
                        <div class="w-50 border-left">
                            <h2 class="margin-left">
                                @Model.TemperatureFehrenheit
                                <span>@Model.CityUniqueCode</span>
                            </h2>
                        </div>
                    </div>
                    
                </div>
                <div class="text-center">
                    <a href="~/">Back to Weather Home Page</a>
                </div>
            } 
            else
            {
                <h3>City Code is not Valid</h3>
            }
        </div>
    </div>
    
</body>
</html>
