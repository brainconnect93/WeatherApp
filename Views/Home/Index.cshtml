@{
    // function: to get CSS background color based on the degree range

    string CssByDegree(int TemperatureFahrenheit)
    {
        return TemperatureFahrenheit switch
        {
            (< 44) => "blue-back",
            (>= 44) and (< 78) => "green-back",
            (>= 75) => "orange-back"
        };
    }
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.appTitle</title>
    <meta charset="utf-8" />
    <link href="~/Styles.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="page-content">
            <div class="margin-bottom">
                <h1>Weather</h1>
            </div>
        
            <div class="margin-top-200 margin-left">
                <div class="flex">
                    @foreach(CityWeather weather in Model)
                    {
                        <div class="box cursor-pointer w-30 @CssByDegree(weather.TemperatureFehrenheit)">
                            <div class="flex-borderless">
                                <div class="w-50">
                                    <h2>@weather.CityName</h2>
                                    <h4 class="text-dark-grey">@weather.DateAndTime?.ToString("hh:mm tt")</h4>
                                    <a href="~/city-details/@weather.CityName" class="margin-top">Details</a>
                                </div>
                                <div class="w-50 border-left">
                                    <h2>@weather.TemperatureFehrenheit
                                    <span class="text-grey">@weather.CityUniqueCode</span>
                                    </h2>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>

